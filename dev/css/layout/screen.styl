@import "variables.styl"


.screen
    &-1
        position relative
        .logo
            margin-top 45px
        .pull-right
            position relative
        .consult
            position absolute
            right 65px
            top 20px
            background-color $colorGreen
            width 130px
            height 130px
            border-radius 50%
            color #fff
            font-size 13px
            padding-top 35px
        .star
            font-size 12px
        .star.hidden-xs
            margin-right 25px
        &-title
            font-size 34px
            font-family $fontPFDinReqular
            font-weight bold
            text-transform uppercase
            letter-spacing: 2px
            margin-top 60px
        &-text
            font-size 18px
            font-family $fontPFDinReqular
            margin-top 25px
        &-price
            font-size 100px
            font-family $fontPFDinMedium
            text-transform uppercase
            i
                font-size 85px
        &-btn
            a
                background-color $colorLightBlue
                padding 15px 25px
                font-size 18px
                font-family $fontPFDinReqular
                font-weight: bold
                letter-spacing: 2px
                color #fff
                text-transform uppercase
                border-radius 5px
        &-hint
            font-size 11px
            color $colorLightBlue
            margin-top 20px
    &-2
        &-title
            @extend .screen-1-title
            display block
            margin 90px auto 30px
            text-align center
            font-size 44px
        .bxslider
                opacity: 0
                &-title
                    font-family $fontPFDinReqular
                    font-size 30px
                    font-weight 100
                    text-transform uppercase
                &-text
                    font-weight 100
                    font-size 16px
                    line-height: 24px
    &-3
        &-title
            @extend .screen-2-title
            margin-top 60px
        .bx-wrapper
            margin 0 auto
            min-width 100%
            .name
                font-family $fontPFDinReqular
                font-size 24px
                text-transform uppercase
                margin 20px auto
                display block
            .spec
                font-size 12px
                font-weight: lighter
                color #8e8e8e
                margin-bottom 20px
            .text
                font-size 13px
                font-weight: lighter
    &-4
        &-title
            @extend .screen-3-title
        &-subtitle
            font-size 30px
            font-weight 100
            text-transform: uppercase;
            text-align: center
            font-family $fontPFDinReqular
            margin-top -20px

.subway_map
    background: url("http://intan.ru/images/metromap.png") no-repeat scroll 0 0 transparent
    height: 688px
    position: relative
    width: 660px
    z-index: 1
    margin: auto
    div
        background: url($pathImg + "sprite.png") 0px 0px no-repeat;
        display: block;
        height: 24px;
        position: absolute;
        width: 25px;
        z-index: 2;
        margin-left: 0px;
        margin-top: 1px;
.bx-wrapper
    border 0
    box-shadow: none
    padding: 0px 115px
    .bx-prev
        background url($pathImg + 'slide-arrows.png') no-repeat 0 0
        &:hover,
        &:focus
            background-position: 0 100%
    .bx-next
        background url($pathImg + 'slide-arrows.png') no-repeat 100% 0
        &:hover,
        &:focus
            background-position: 100% 100%
    .bx-controls-direction
         a
            width 25px
            height 47px
#bx-pager
    padding: 0px 115px
    a
        float left
        width 150px
        text-align: center
        position: relative
        &.active
            .num
                background-color $colorBlue
                border-color: $colorBlue
                color #fff
        &:hover,
        &:focus
            text-decoration: none
        &:before
            content ""
            display: block
            height 1px
            width 90px
            background-color $colorGreen
            position: absolute
            left -45px
            top 20px
        &:first-child
            &:before
                display: none
        .num
            font-size 30px
            border-radius 50%
            font-family $fontPFDinReqular
            font-weight lighter
            color #000
            display: block
            margin 0 auto
            width 40px
            height 40px
            line-height: 40px
            border 2px solid $colorGreen
            text-align: center
        .desc
            font-size 13px
            color #000
            font-weight lighter

.writeNow
    margin 65px auto 0px
    width 100%
    min-width 100%
    background-color $colorGreen
    color #fff
    padding 50px 250px
    position relative
    text-align center
    overflow hidden
    &.second
        text-align left
        img
            margin-bottom -50px
            max-width 100%
    &-title
        font-size 40px
        font-family $fontPFDinReqular
        text-transform uppercase
        letter-spacing 1px
        font-weight: 600
    &-title-light
        @extend .writeNow-title
        line-height 35px
        font-family $fontPFDinReqular
        font-weight 100
    &-btn
        margin-top 10px
        a
            @extend .screen-1-btn a

@media (max-width: 1200px)
    .screen
        &-1
            .consult
                right 50px
            .pull-right
                img
                    max-width 100%
@media (max-width: 768px)
    .bx-wrapper
        padding 0 20px
        .bx-controls-direction
            a
                top 80px
        img
            margin: 0 auto 20px
    #bx-pager
        padding 0 20px
        a
            display: none
            margin: 0 auto;
            float none
            &:first-child
                &:before
                    display none !important
            &:last-child
                &:after
                    display none !important
            &.active
                display: block
                &:before,
                &:after
                    background-color: #e9e9e9
                    width 48px
                    height 1px
                    left -20px
                    top 20px
                    content ''
                    display: block
                    position absolute
                &:after
                    left auto
                    right -20px

    .writeNow
        padding: 50px 0px
        &.second
            text-align: center
            img
                margin-top 20px
    .screen
        &-1
            .logo
                text-align center
            .consult
                font-size 11px
                width 100px
                height 100px
                padding-top 30px
                right 0px
            &-price
                font-size 85px
                i
                    font-size 70px
            .pull-right,
            .pull-left
                text-align: center;
